<metal:html use-macro="admin_base.macros['main_admin']">

	<metal:description fill-slot="description">
		<h2><span>MiloAdmin</span></h2>
	</metal:description>
		
	<metal:content fill-slot="content">	
	<div id="content">
		<h2>Surveys management</h2>
		<ul class="tabs">
			<li id="tab1" class="active"><a href="#" title="Add"><span>Add survey</span></a></li>
			<li id="tab2"><a href="#" title="View All"><span>View created surveys</span></a></li>
		</ul>
		
		<div id="tab1_content" class="tab_content">
		<form method="post" action="">
		<fieldset>
			<label>To add a new survey, fill the information and submit:</label><br/><br/>
			<label>Survey Name:</label><br/>
			<span class="small_input"><input class="small" name="" type="text" value="" /></span><br class="hid" />
			
			<div class="option">
						<label for="survey_alg">Algorithm type:</label><br/>
						<select name="algorithm" size="1">
								<option value="  " selected>(select the survey's algorithm)
								<option value="alg1">Algorithm #1
								<option value="alg2">Algorithm #2 
								<option value="alg3">Algorithm #3
								<option value="alg4">Algorithm #4 
						</select>
			</div><!--field-->
			
			<div class="option">
						<label for="survey_ratings">Number of ratings:</label><br/>
						<select name="ratings" size="1">
								<option value="  " selected>(select how many ratings the user perform)
								<option value="4">4
								<option value="5">5 
								<option value="6">6
								<option value="7">7
								<option value="8">8
								<option value="9">9
								<option value="10">10
								<option value="11">11
								<option value="12">12 
						</select>
			</div><!--field-->
			
			
			
			<div id="add_survey">
			<a href="#" class="button" title="Submit"><span>Add survey</span></a>
			<span class="clear"></span>
			</div>
			
		</fieldset>
		</form>
		</div><!--tab1_content-->
		
		<div id="tab2_content" class="tab_content">
		<div class="box">
			<table>
				<tr>
					<th class="col1">Survey's Name</th>
					<th class="col2">Algorithm Used</th>
					<th class="col3">Number of Ratings</th>
					<th class="col4">User's List</th>
				</tr>
				<tr class="highlight">
					<td><a href="#" title="survey_name1">Survey #1</a></td>
					<td>Algorithm #1</td>
					<td>5</td>
					<td class="action">
						<ul>
							<li><a class="edit" href="#" title="edit"></a></li>
						</ul>
					</td>
				</tr>
			</table>
			<p id="pagin">
				&laquo; <a href="#" title="">previous</a> &ndash;
				<a href="#" title="">1</a>
				<a href="#" title="">2</a>
				<a href="#" title="">3</a>
				<a href="#" title="">4</a>
				<a href="#" title="">5</a>
				<a href="#" title="">6</a>
				<a href="#" title="">7</a>
				<a href="#" title="">8</a>
				<a href="#" title="">9</a>
				&ndash; <a href="#" title="">next</a> &raquo;
			</p>
		</div>
		</div><!--tab2_content-->
		
		
		<p id="congrats" class="alert">
			<span class="txt"><span class="icon"></span><strong>Congrats:</strong> New survey created successfully!</span>
			<a href="#" class="close" title="Close"><span class="bg"></span>Close</a>
		</p>
	</div>
	</metal:content>
</metal:html>
