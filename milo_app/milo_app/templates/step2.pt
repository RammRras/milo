     <tal:r repeat="movie movies.get('movies')">
            <div id="step2_item" class="gallery-item ${'clearboth' if not repeat.movie.index % 3 else ''}">
            	<div class="post-thumbnail">
            	<a target="_new" class="thumbnail-frame" tal:attributes="href request.resource_url( context ,  'Movie', movie.title, query=dict(wizard_movie='details') )" title="See the trailer and details">
            	<img width="180" height="250" tal:attributes="src request.static_url('milo_app:static/movie_data/'+movie.poster)" class="recommended-post-thumbnail" alt="Finding Nemo" title="Finding Nemo" />
					<span><img width="180" height="260" tal:attributes="src request.static_url('milo_app:static/movie_data/'+movie.poster)"/></span>				
				</a>            
            	</div><!--post-thumbnail-->

              	<h2><a target="_new" tal:attributes="href request.resource_url(context, 'Movie', movie.title, query=dict(wizard_movie='details'))" title="Go to this movie page">${movie.title}</a><span title="Release Date">(${movie.date.strftime('%Y')})</span></h2>

              	<ul class="post-meta">
  
					<li class="info info-logged">
						<tal:rating_finished condition="not rating_finished">
						<span>Rated it: </span>
						<a href="javascript:panel_down_wizard('${request.resource_url(context, request.view_name, query=dict(num_ratings = num_ratings+1))}','${movie.title} rated as liked! Submit?');" title="Like this movie"><img width="18" height="18" src="${request.static_url('milo_app:static/images/icons/fatcow/32x32/thumb_up.png')}"></a>
						<a href="javascript:panel_down_wizard('${request.resource_url(context, request.view_name, query=dict(num_ratings = num_ratings+1))}','${movie.title} rated as disliked... Submit?');" title="Dislike this movie"><img width="18" height="18" src="${request.static_url('milo_app:static/images/icons/fatcow/32x32/thumb_down.png')}"></a>
						</tal:rating_finished>
					</li>
					<li class="genre">Genre: <tal:genres repeat="g movie.genre"><a href="#" title="Search films of this genre">${g}</a>,</tal:genres></li>
					<li class="genre">Director: <tal:genres repeat="g movie.genre"><a href="#" title="Search films of this director">${'Director Name'}</a></li>
					<li class="genre">Cast: <tal:actor><a href="#" title="Search films of this actor">${'Actor Name'}</a>,</tal:actor></li>
              </ul>
            </div>
            <!-- movie-item , first_page='false')-->
